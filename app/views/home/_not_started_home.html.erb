<div class="container-fluid animated fadeIn fast">

<div class="modal hide fade" id="myModal">
  <div class="modal-header">
    <a class="close" data-dismiss="modal">×</a>
    <h3>Modal header</h3>
  </div>
  <div class="modal-body">
    <p>One fine body…</p>
  </div>
  <div class="modal-footer">
    <a href="#" class="btn">Close</a>
    <a href="#" class="btn btn-primary">Save changes</a>
  </div>
</div>

  <div class="row row-no-margin preVoting">
    <div class="col-12 wrap fullHeight">
      <div class="inner fullWidth centered groupInfo">
        <!-- add @round for number -->
        <h1 class="stateName"><%= @current_genre.name %> </h1>
    
          <p class="groupInfoSubtext">
            <%= @current_genre.songs.count %>/<%= @current_genre.participant_cap %> Artists Entered &mdash; Round 1 will begin on February 29
          </p>
          <% unless current_user.song%>
            <% unless @current_genre.participant_cap == @current_genre.songs.count %>
              <%= link_to "Enter Now", edit_user_path(current_user), class: "btn btn-primary homeButton"%>
            <% end %>
          <% end %>
          <%= link_to "Change Genre", select_current_genre_users_path(current_user), method: :put, class: "btn btn-outline-primary homeButton"%>
          

      </div>
    </div>
    <div class="col-12">
      <% if @song && @artist %>
        <p class="centered enterSoundStageText"> 
          <%= link_to "#{@song.name} by #{@artist.name}", "https://open.spotify.com/track/#{@song.id}", target: "_blank"%> has been submitted to the next <strong><%=@submitted_genre_name%></strong> SoundStage.
        </p>
      <% end %>
    </div>
  </div>



  

</div>  <!-- end container -->
